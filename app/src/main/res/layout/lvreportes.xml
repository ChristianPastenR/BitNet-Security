<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoreporte"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0"
            android:visibility="visible"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp"
            app:srcCompat="@drawable/icon_perfil_foreground"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lvrfecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|end"
                android:gravity="right"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/lvrusuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lvrempresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvrfaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvrturno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvrggss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvrsupervisor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lvrreporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

    </LinearLayout>

</LinearLayout>